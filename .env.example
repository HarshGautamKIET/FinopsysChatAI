# Environment Variables for FinOpSysAI
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=finopsys_db
POSTGRES_SCHEMA=public

# AI Model Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:1.5b
DEFAULT_PROVIDER=gemini
DEFAULT_MODEL=gemini-1.5-flash

# Application Settings
SESSION_TIMEOUT=3600
MAX_QUERY_RESULTS=1000
LOG_LEVEL=INFO

# Security Settings
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Table Configuration
PRIMARY_TABLE=AI_INVOICE
STRICT_VENDOR_FILTERING=true

# Feedback System Configuration
DEVELOPMENT_MODE=true                    # Enable/disable feedback UI (true/false)
FAISS_INDEX_PATH=./feedback_data/faiss_index        # FAISS index file path
FEEDBACK_DATA_PATH=./feedback_data/feedback.json    # JSON file for feedback metadata
FEEDBACK_SIMILARITY_THRESHOLD=0.85      # Similarity threshold for feedback retrieval (0.0-1.0)
FEEDBACK_MAX_RESULTS=5                  # Max number of similar feedback items to retrieve
